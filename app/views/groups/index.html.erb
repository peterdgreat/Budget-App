<div class="d-height d-flex flex-column justify-content-between" >

<%= render partial: "shared/navbar", locals: { title: "CATEGORIES" } %>
<br/>
<%if user_signed_in?%>

  <% if @groups.blank?%>
    <p class="text-center">You don't have any category yet! Click below to add one.</p>
  <% else %>
<div id="groups" class="mt-5 ">
<div class="mx-3 d-flex justify-content-end ">
<span>$<%=@total_spending%></span>
</div>
  <% @groups.each do |group| %>
    <%= render group %>
  <% end %>
</div>

<%end%>
<section class= "end">
<div class = "new-group d-flex justify-content-center">
<%= link_to "New Category", new_group_path,  class: "btn btn-outline-light"%>
</div>
<section>
</div>
<%else%>
<div class="d-flex flex-column justify-content-end align-items-center log-in-container">
<div class="wrapper">
<h2 class="smart">Smart Budgets</h2>

</div>
<div class="d-flex flex-column mb-1 align-items-center">
 <%= button_to "SIGN IN", new_user_session_path, method: :get, class: "btn btn-primary" %>
 <%= button_to "SIGN UP", new_user_registration_path, method: :get, class: "btn " %>
</div>
</div>

<%end%>
